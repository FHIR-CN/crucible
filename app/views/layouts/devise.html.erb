<!DOCTYPE html>
<html>
<head>
  <title>Crucible</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <% if user_signed_in? %>
      <%= render 'layouts/header' %>
    <% end %>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= yield %>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>

</body>
</html>