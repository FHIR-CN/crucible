
<div class="row">
<h4 class="login col-md-2">
  <img src="/assets/logo_dark.png"></img>
</h4>

<dic class="col-md-10">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="login-inputs registration row">
    <div class="form-group login-input col-md-12">
      <%= f.email_field :email, autofocus: true, placeholder: "Please enter desired username", class: "form-control" %>
    </div>
    <div class="form-group login-input col-md-12">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Please enter desired password", class: "form-control" %>
    </div>

    <div class="form-group login-input col-md-12">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Please re-enter desired password", class: "form-control" %>
    </div>

  </div>
  <div class="login-footer row">
    <div class="login-options col-md-8">
      <%= link_to "Click to login", new_session_path(:user) %> | <%= link_to "Return to Crucible", new_session_path(:user) %>
    </div>          
    <div class="login-btn col-md-4">
      <%= f.submit "Register", class: "btn" %>
    </div>
  </div>
<% end %>
</div>
</div>